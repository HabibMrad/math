#!/bin/bash
# Add a -x to the end of the above line to help debug this script.

# Set up prefix templates for pandoc-crossref.
ept='$$i$$'
spt='$$p$$$$i$$'
crossref_flags="-M secPrefix=ยง -M secPrefixTemplate=${spt} -M eqnPrefixTemplate=${ept} --filter pandoc-crossref"

NAME=enum_comb
FLAGS="-s -S ${crossref_flags} -M linkcolor=black --number-sections --bibliography=${NAME}.bib ${NAME}.md"

# Make and open the html file.
pandoc --mathjax --template=template.html ${FLAGS} > ${NAME}.html
open ${NAME}.html

# Make and open the pdf file.
pandoc -t latex -o ${NAME}.pdf -s ${FLAGS}
open ${NAME}.pdf
